   <children>
      <AnchorPane layoutX="40.0" layoutY="36.0" prefHeight="477.0" prefWidth="643.0" style="-fx-background-color: #ffffff; -fx-background-radius: 30;">
         <children>
            <ScrollPane layoutX="24.0" layoutY="14.0" prefHeight="409.0" prefWidth="596.0" style="-fx-background-color: #ffffff;">
               <content>
                  <VBox fx:id="chatVbox" prefHeight="405.0" prefWidth="593.0" style="-fx-background-color: #ffffff;" />
