            <ImageView fx:id="loadingImageView" fitHeight="35.0" fitWidth="31.0" layoutX="8.0" layoutY="434.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/meetme.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
